@using Microsoft.AspNetCore.Identity
@using Petz.Dal.Entities;

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <a class="mr-5 hover:text-gray-900" id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
    </a>
    <a class="hover:text-gray-900" id="logout" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" title="Logout">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
        </svg>
    </a>
}
else
{
    <a class="mr-5 hover:text-gray-900" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="hover:text-gray-900" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
