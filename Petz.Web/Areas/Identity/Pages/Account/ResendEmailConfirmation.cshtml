@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="font-sans min-h-screen flex items-start justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
        <img class="mx-auto h-12 w-auto" src="/img/logo.png" alt="Petz">
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Resend email confirmation</h2>
        <div asp-validation-summary="All" class="mt-2 text-center text-sm text-gray-600"></div>
    </div>
    <section>
      <form method="post" class="mt-8 space-y-6">
        <div class="form-group">
            <input asp-for="Input.Email" class="form-control rounded-md appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10" placeholder="Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
          <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-md rounded-md text-white bg-indigo-500 hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-400 group-hover:text-indigo-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
            </svg>
            </span>
            Resend
          </button>
        </div>
      </form>
    </section>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
